<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <p><%= f.label :First_Name %><br />
  <%= f.text_field :FirstName %></p>
  
  <p><%= f.label :MidName %><br />
  <%= f.text_field :MidName %></p>
  
  <p><%= f.label :LastName %><br />
  <%= f.text_field :LastName %></p>


  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>
  
  <p><%= f.label :ContactNo%><br />
  <%= f.text_field :ContactNo %></p>
  
  <p><%= f.label :Country %><br />
  <%= f.text_field :Country %></p>
  
  <p><%= f.label :State %><br />
  <%= f.text_field :State %></p>
  
  <p><%= f.label :City %><br />
  <%= f.text_field :City %></p>
  
  <p><%= f.label :Address %><br />
  <%= f.text_field :Address %></p>
  
  <p><%= f.label :DOB %><br />
  <%= f.text_field :DOB %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

